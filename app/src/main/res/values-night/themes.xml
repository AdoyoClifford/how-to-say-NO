<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material 3 Expressive Dark Theme -->
    <style name="Theme.HowToSayNO" parent="android:Theme.Material.NoActionBar">
        <!-- Enable Material You dynamic colors for dark theme -->
        <item name="android:colorPrimary">@color/expressive_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/expressive_primary</item>
        <item name="android:colorAccent">@color/expressive_accent_dark</item>
        
        <!-- Status bar configuration for dark theme -->
        <item name="android:statusBarColor">@color/expressive_primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar configuration for dark theme -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Window configuration for edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
    </style>
</resources>